<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <%= link_to 'FLIXTER', root_path, class: 'navbar-brand' %>
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Log out', destroy_user_session_path, class: 'nav-link', method: :delete %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'Log in', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
            <div class="col-12 col-sm-3">
              <b>Teachers</b>
              <br />
              <%= link_to 'Teach a Course', new_instructor_course_path %>
              <br />
              <%= link_to 'My Dashboard', dashboard_path %>
            </div>
            <div class="col-12 col-sm-3">
              <b>About</b>
              <br />
              <%= link_to 'Team', '#' %>
              <br />
              <%= link_to 'Careers', '#' %>
              <br />
              <%= link_to 'Privacy Policy', '#' %>
            </div>
            <div class="col-12 col-sm-3">
              <b>Contact</b>
                <br />
                foobar@foobar.foobar
                <br />
                Foobar St.
                <br />
                Foobar FO, 70084
            </div>
            <div class="col-12 col-sm-3 social">
              <b>Social</b>
              <br />
              <%= link_to 'http://github.com/miljinx' do %>
                <span class="fa fa-github-square fa-2x social-button"></span>
              <% end %>
              <%= link_to 'http://facebook.com' do %>
                <span class="fa fa-facebook-square fa-2x social-button"></span>
              <% end  %>
              <%= link_to 'http://twitter.com' do %>
                <span class="fa fa-twitter-square fa-2x social-button"></span>
              <% end %>
            </div>
        </div>
      </div>
    </div>

    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>
