<br />

<div class="booyah-box col-10 offset-1" >
  <h1 class="text-center">Learn something today</h1>

  <% @courses.each do |course| %>
    <hr class="clr"/>
    <h2 class="text-center"><%= course.title %></h2>
    <div class="col-8 offset-2 text-center">
      <%= image_tag course.image, class: 'img-fluid' %>
    </div>
    <br />
    <div class="col-sm-10 offset-sm-1 col-12 text-center">
      <%= course.description %>
    </div>
    <div class="col-sm-4 offset-sm-4 col-12 text-center">
      <%= link_to 'More details...', course_path(course), class: 'btn btn-primary btn-large' %>
    </div>
    <br class="clr" />
  <% end %>
</div>
